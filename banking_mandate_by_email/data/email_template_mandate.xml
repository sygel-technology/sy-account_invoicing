<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- E-mail Template for Banking Mandates -->
        <record id="email_template_banking_mandate" model="mail.template">
            <field name="name">Banking Mandates - Send by Email</field>
            <field name="email_from">{{ object.company_id.email }}</field>
            <field name="subject">{{ object.company_id.name }} Mandate (Ref {{ object.display_name or 'n/a' }})</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="model_id" ref="account_banking_mandate.model_account_banking_mandate"/>
            <field name="auto_delete" eval="False"/>
            <field name="report_template" ref="account_banking_sepa_direct_debit.report_sepa_direct_debit_mandate"/>
            <field name="report_name">{{ (object.unique_mandate_reference or 'mandate_'(object.id)) }}</field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="body_html" type="html">
                <div>
                    <p>Dear <t t-out="object.partner_id.name"/>,</p>
                    <p>
                        Here is, in attachment, your mandate <t t-out="object.unique_mandate_reference"/>.<br/>
                        Please return the attached file correctly completed and signed.
                    </p>
                    <p>Thank you,</p>
                    <p style="color:#888888"><t t-out="object.company_id.name"/></p>
                </div>
            </field>
        </record>
    </data>
</odoo>
